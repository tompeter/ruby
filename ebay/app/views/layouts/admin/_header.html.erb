<div class="header">
  <div class="header-top">
    <div class="container">
      <div class="search">
        <table>
          <tr>
            <td><input type="text" placeholder="Search" id="searchTextBox"></td>
            <td><button type="button" class="btn" id="searchbutton">Search</button></td>
          </tr>
        </table>
      </div>
      <div class="header-left">
        <ul>
          <li>
            <% if (user_signed_in?) %>
              <p class="text-danger"><%=current_user.email%></p>              
            <% end -%>
          </li>
          <li>
            <% if (user_signed_in?)%> 
              <%= link_to 'Log Out', destroy_user_session_path, class: 'color8 button',method: :delete %>
            <% end -%>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>

<div class="container">
  <div class="head-top">
    <div class="logo">
      <%= link_to root_path do %>
        <img alt="" src="/assets/logo.png">
      <% end -%>
    </div>
    <div class="h_menu4">
      <ul class="memenu skyblue">
        <li class="active grid">
          <%= link_to 'Home', admin_path, class: 'color8'%>
        </li>
        <li>
          <%= link_to 'Brands', admin_brands_path, class: 'color8'%>
        </li>
        <li>
          <%= link_to 'Categories', admin_categories_path, class: 'color8'%>
        </li>
      </ul>
    </div>
    <div class="clearfix"></div>
  </div>
</div>


