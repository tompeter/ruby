<div class="header">
  <div class="header-top">
    <div class="container">
      <div class="search">
        <table>
          <tr>
            <td><input type="text" placeholder="Search" id="searchTextBox"></td>
            <td><button type="button" class="btn" id="searchbutton">Search</button></td>
          </tr>
        </table>
      </div>
      <div class="header-left">
        <ul>
          <li>
            <% if (user_signed_in?) %>
              <p class="text-danger"><%=current_user.email%></p>              
            <% end -%>
          </li>
          <li>
            <% if (user_signed_in?) %>
              <%= link_to 'Log Out', destroy_user_session_path, class: 'color8 button', method: :delete %>
            <% else %>
              <%= link_to 'Login', new_user_session_path, class: 'color8 button'  %>
            <% end -%>
          </li>
          <li>
            <% unless (user_signed_in?)%> 
              <%= link_to 'Sign up', new_user_registration_path, class: 'color8 button'%>
            <% end -%>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>

<div class="container">
  <div class="head-top">
    <div class="logo">
      <%= link_to root_path do %>
        <img alt="" src="/assets/logo.png">
      <% end -%>
    </div>
    <div class="h_menu4">
      <ul class="memenu skyblue">
        <li class="active grid">
          <%= link_to 'Home', products_path, class: 'color8'%>
        </li>
        <li>
          <a class="color1" href="javascript:void(0);">Brands</a>
          <div class="mepanel">
            <div class="row">
              <div class="col1">
                <div class="h_nav">
                  <ul>
                    <% Brand.all.each do |l| %>
                      <li><%= l.name.try(:capitalize) %></li>
                    <% end -%>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </li>
        <li class="grid">
          <a class="color2" href="#">Categories</a>
          <div class="mepanel">
            <div class="row">
              <div class="col1">
                <div class="h_nav">
                  <ul>
                    <% Category.all.each do |l| %>
                      <li><%= l.name.try(:capitalize) %></li>
                    <% end -%>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="clearfix"></div>
  </div>
</div>


