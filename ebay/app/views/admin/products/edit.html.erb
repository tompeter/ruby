<% if @product.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li class="col-md-offset-2 text-danger">
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
  <div class="col-sm-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">
          Edit
        </div>
      </div>
      <div class="panel-body">
        <%= form_for([:admin, @product], html: { class: 'form-horizontal', :multipart => true }) do |l| %>
          <div class="form-group">
            <label for="Product Name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
              <%= l.text_field :product_name, class: 'form-control', placeholder: 'No value' %>
            </div>
          </div>
          <div class="form-group">
            <label for="Product Details" class="col-sm-2 control-label">Details</label>
            <div class="col-sm-10">
              <%= l.text_area :product_details, class: 'form-control', placeholder: 'No Value'%>
            </div>
          </div>
          <div class="form-group">
            <label for="Product No" class="col-sm-2 control-label">Product No</label>
            <div class="col-sm-10">
              <%= l.text_field :product_no, class: 'form-control', placeholder: 'No value'%> 
            </div>
          </div>
          <div class="form-group">
            <label for="Category" class="col-sm-2 control-label">Category</label>
            <div class="col-sm-10">
              <%= l.collection_select(:category_id, Category.all, :id, :name) %>
            </div>
          </div>
          <div class="form-group">
            <label for="Brand" class="col-sm-2 control-label">Brand</label>
            <div class="col-sm-10">
              <%= l.collection_select(:brand_id, Brand.all, :id, :name) %>
            </div>
          </div>
          <div class="thumbnail col-md-offset-2">
            <%= l.file_field :avatar %>
          </div>
          <div class="col-md-offset-5 col-md-12">
            <button type="submit" class="btn btn-default">Update</button>
            <%= link_to 'Back', admin_products_path, class: 'btn btn-default'%>
          </div>
        <% end %>
      </div>
    </div>            
  </div>
</div>
