<div class="row"> 
  <div class="col-sm-offset-3 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">
          Product
        </div>
      </div>
      <div class="panel-body">
        <table  class="table table-bordered">  
          <thead></thead>
          <tbody>
            <tr>
              <td>
                <div class="col-md-offset-1">
                  <%= image_tag @product.avatar.url(:thumb), style: 'height: 100px;' 'width:100px;'%><br>
                </div>
              </td>
              <td><p><%= @product.product_name %></p></td>
                <td><p><%= @product.product_details %></p></td>
                <td><p><%= @product.product_no %></p></td>
                <td><p><%= @product.category.name %></p></td>
                <td><p><%= @product.brand.name %></p></td> 
            </tr>
          </tbody>
        </table>
        <div class="col-md-offset-5 button">
          <%= link_to 'Back', products_path, class: 'btn btn-default'%>
        </div>
      </div>
    </div>
  </div>
</div>
         