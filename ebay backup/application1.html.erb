<!DOCTYPE html>
<html>
  <head>
    <title>Ebay</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  </head>
  <body>
    <div class="navbar header" role="search">
      <form class="form-inline">
          <div class="form-group">
            <div class="input-group">
              <input type="text" placeholder="Search" id="searchTextBox" class="form-control">
            </div>
          </div>
          <button type="button" class="btn btn-primary navbar-btn">Search</button>
          <div class="form-group pull-right">
            <div class="col-sm-1">
            <%= link_to 'Log Out', destroy_user_session_path , class: 'btn btn-default', method: :delete%>
            </div>
          </div>
      </form>		  
  	</div>
  	<div class="container">
  		<%= yield %>
  	</div>
  </body>
</html>
