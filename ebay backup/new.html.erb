<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
    </h2>
 
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@product,:url => products_path, html: { class: 'form-horizontal', :multipart => true }) do |l| %>  
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= l.file_field :avatar %>
        <div class="form-group">
          <label for="Product Name" class="col-sm-2 control-label">Name</label>
          <div class="col-sm-10">
            <%= l.text_field :product_name, class: 'form-control', placeholder: 'Enter Product Name' %>
          </div>
        </div>
        <div class="form-group">
          <label for="Product Details" class="col-sm-2 control-label">Details</label>
          <div class="col-sm-10">
            <%= l.text_area :product_details, class: 'form-control', placeholder: 'Enter Product Details'%>
          </div>
        </div>   
        <div class="form-group">
          <label for="Product No" class="col-sm-2 control-label">Product No</label>
          <div class="col-sm-10">
            <%= l.text_field :product_no, class: 'form-control', placeholder: 'Enter Product No'%> 
          </div>
        </div>   
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create</button>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= link_to 'Back', products_path, class: 'btn btn-default'%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>    